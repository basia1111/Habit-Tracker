{% extends 'base.html.twig' %}
 {% block stylesheets %}
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
     <link rel="stylesheet" href="{{ asset('css/base.css') }}">
     <link rel="stylesheet" href="{{ asset('css/habits.css') }}">
 {% endblock %}


{% block body %}

    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="alert alert-{{ type }}" role="alert">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
<h1>Add habit</h1>

{{ form_start(form)}}

    {{ form_row(form.name) }}
    {{ form_row(form.time) }}
    {{ form_row(form.place) }}
    {{ form_row(form.monday) }}
    {{ form_row(form.tusday) }}
    {{ form_row(form.wednesday) }}
    {{ form_row(form.thursday) }}
    {{ form_row(form.friday) }}
    {{ form_row(form.sathurday) }}
    {{ form_row(form.sunday) }}
    {{ form_row(form.requisites) }}
    {{ form_row(form.notes) }}
    <div style="display: none;">
        {{ form_row(form.image) }}
    </div >
    <div class="icons-container">
    {% for child in form.image %}
        <div>
            <label  onclick="labelActive('{{ child.vars.id }}')" for="{{ child.vars.id }}" class="required radio" id="{{ child.vars.id }}">
                <div class="{{ child.vars.id }} icon"> </div>
            </label>
        </div>
    {% endfor %}
    </div>
<button type="submit" class="btn">Add</button>
{{ form_end(form) }}
{% endblock%}
{% block javascripts %}
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script>
        const labels = document.querySelectorAll('.radio');

        function labelActive(object){
            labels.forEach(label => {
                label.classList.remove('active');
                console.log(label.id);
                if (label.id == object ){
                    label.classList.add('active');
                    console.log( label.id)
                }
                console.log('object: '+object);
            });

        }
    </script>
{% endblock %}