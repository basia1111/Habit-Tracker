{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}


{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">  <link href="css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}


<nav class="navbar navbar-expand-lg navbar-dark bg-dark">

    <!-- container for responsiveness -->
    <div class="container-fluid">

        <!-- first item: brand name -->
        <a class="navbar-brand" href="#">MyBrand</a>

        <!-- this is the button when it collapses due to small screen size (data-bs-target must match the ID of the div below)-->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- this div holds everything who is going to collapse inside the button (be careful with the ID. It must match with the button target) -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">

            <!-- this list contains the "menu options (items)" such as download, contact, pricing, etc. -->
            <ul id="my-ul" class="ms-auto navbar-nav">

                <!-- this is an item -->
                <li class="nav-item">
                    <a class="nav-link" href="#">Download</a>
                </li>
                <!-- this is another item -->
                <li class="nav-item">
                    <a class="nav-link" href="#">About</a>
                </li>

            </ul>

        </div>

    </div>

</nav>

    <div class="row">
        <div class="box col-md-6 col-lg-7  ">




        </div>
        <div class="box col-md-6 col-lg-5">
            <!-- body -->
            <div id="my-element" data-my-variable="{{registrationErrror }}"></div>
            <!-- right side -->

            <!-- left side- login form -->
            <div class="wrapper  {% if  registrationErrror  is defined and  registrationErrror == 1  %} active {% endif %}">

                <!-- sign-up form -->
                <div class="form-wrapper sign-up">

                    <!-- header -->
                    <div>
                        <h1 class="h3">Register</h1>
                        <div class="signUp-link">
                            <p class="small-text">Already have an account?
                                <a href="#" class="signInBtn-link link">Sign In</a>
                            </p>
                        </div>
                    </div>

                    <!-- form -->
                    <div>
                        {{ form_start(registrationForm) }}
                        <div class="errors">
                            <!-- errors -->
                            {{ form_errors(registrationForm.email) }}
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>
                        <!-- inputs -->
                        <div class="input-wrap">
                            {{ form_widget(registrationForm.email) }}
                            <label>Email</label>
                        </div>
                        <div id="password-s" class="input-wrap ">
                            {{ form_widget(registrationForm.plainPassword) }}
                            <label>Password</label>
                        </div>
                        <div id="agree" class=" input-wrap">
                            {{ form_widget(registrationForm.agreeTerms) }}
                            <p class="small-text"> Agree to terms</p>
                        </div>

                        <!-- submit -->
                        <button  type="submit" class="button">Register</button>

                        {{ form_end(registrationForm) }}
                    </div>
                </div>

                <!-- sign-in form -->
                <div class="form-wrapper sign-in">

                    <!-- header -->
                    <div>
                        <h1 class="h3 ">Please sign in</h1>
                        <div class="signUp-link">
                            <p class="small-text"> Don't have account yet?
                                <a href="#" class="signUpBtn-link link ">Sign Up</a>
                            </p>
                        </div>
                    </div>

                    <!-- Form -->
                    <form method="post">

                        <!-- errors -->
                        {% if error %}
                            <div class="errors">
                                Invalid login or password!
                            </div>
                        {% endif %}

                        <!-- inputs -->
                        <div class="input-wrap">


                            <input id="login-name" type="email"  name="email" autocomplete="email"  required autofocus>
                            <label>Email</label>
                        </div>
                        <div id="password-r" class="input-wrap ">
                            <input type="password" name="password"  autocomplete="new-password" required>
                            <label>Passowrd</label>
                        </div>

                        <!-- Forgot password -->
                        <div>
                            <a class="small-text forgot link" href="{{ path('app_forgot_password_request')}}">Forgot password?</a>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <!-- submit -->
                        <div>
                            <button class="button"  type="submit">
                                Sign in
                            </button>
                        </div>
                    </form>

                </div>  <!-- form-wrapper -->
            </div>  <!-- wrapper -->
        </div>
    </div>
    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
        <script src="{{ asset('js/login.js') }}"></script>

    {% endblock %}
{% endblock %}

