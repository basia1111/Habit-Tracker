<div id="post-details" class="post-wrapper d-block">
    <div class="post-header-wrapper">
        <div class="d-flex gap-3">
            <button class="post-button" onclick="changePage('posts')" id="back"><i class="fa-solid fa-arrow-left"></i></button>
            <h1>{{ post.title }}</h1>
        </div>
        <div class="d-flex gap-3">
            <button id="edit-post" class="post-button"><i class="fa-solid fa-pen-to-square"></i></button>
            <button id="delete-post"class="post-button"><i class="fa-solid fa-trash"></i></button>
        </div>
    </div>
    <div class="post-details-wrapper">
        <div class="cover-preview"><img src="{{ asset('uploads/cover_images/'~post.cover) }}"></div>
       <div>
        <div><b>Created:</b> {{ post.createdAt |date('d.m.Y H:i') }}</div>
           <div><b>Author:</b> {{ post.author.email}}</div>
       </div>
    </div>
    <div class="post-content">{{ post. content}}</div>
</div>

<div id="post-edit" class="post-wrapper d-none">
    <button id="cancel-edit-post" onclick="changePage('post', {{ post.id }})" class="post-button"><i class="bi bi-x"></i></button>
<form  name="post" id="form-edit-post"  var="{{ post.id }}" class="create-post-form row" action="{{ path('post_create')}}" enctype="multipart/form-data" method="post">

    <div class="col-lg-8">
        <div class="input-wrapper">
            <label for="post[title]">Title</label>
            {{ form_widget(form.title) }}
        </div>
        <textarea rows="5" cols = "50" id="post_content" name="post[content]" requird="required">
{{ post. content}}
        </textarea>
        {{ form_row(form._token) }}
    </div>
    <div class="col-lg-4">
        <div class="preview-wrapper-create">
            <img id="preview-create" class="preview" src="{{ asset('uploads/cover_images/'~post.cover) }}">
        </div>
        <div  class="d-none"><input id="post_cover" type="file" name="post[cover]"></div>
        <div class="upload-wrapper">
            <div id="dropArea" class="">
                <div id="dropArea-message">Select image from the device<br> or drop it here</div>
                <label class="upload-button required" for="post_cover"><span>Upload</span><i class="fa-solid fa-cloud-arrow-up"></i></label>
            </div>
        </div>
        <button class="button-save" type="submit">save</button>
    </div>
</form>
</div>