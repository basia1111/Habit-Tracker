{% extends 'base.html.twig' %}
{% block stylesheets %}


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="{{ asset('css/main/nav.css') }}">
    <link rel="stylesheet" href="{{ asset('css/admin/admin-index.css') }}">
{% endblock %}

{% block body %}

    <div class="row main-row">
        <div class=" col-first  col-sm-1 order-2 order-sm-1 d-sm-block d-none">
            <div class="side-menu-wrapper d-flex flex-column">
                <div class="logo">
                    <a href="{{ url('app_login') }}">
                         <i class="fa-solid fa-screwdriver-wrench"></i>
                    </a>
                </div>
                <div class="menu">
                    <button id="users" class="menu-option-wrapper" onclick="changePage('users')">
                        <i class="fa-solid fa-users"></i>
                    </button>
                    <button id="create" class="menu-option-wrapper" onclick="changePage('create')">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </button>
                    <button id="posts" class="menu-option-wrapper" onclick="changePage('posts')">
                        <i class="fa-solid fa-book-open"></i>
                    </button>
                </div>
                <div class="logout">
                    <a class=" " href="{{ url('app_logout') }}"><i class="fas fa-sign-out-alt"></i></a>
                </div>
            </div>

        </div>
        <div class=" col-second  col-sm-11 order-1 order-sm-2 ">
            <div id="row-nav" class="row row-nav d-flex justify-content-end">
                <nav id="nav-bar" class=" navbar navbar-expand-sm">
                    <a href="{{ url('app_login') }}" class="logo-nav navbar-brand  d-sm-none d-block ">
                        <img src="{{ asset('images/logo.png') }}" alt="Image">
                    </a>

                    <!--nav toogler-->
                    <button class="navbar-toggler" id="navbar-toggler" onclick="changeToggler()" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"> <i class="fa-solid fa-bars"></i></span>
                    </button>

                    <!-- nav-bar -->
                    <div class=" collapse navbar-collapse " id="navbarSupportedContent">
                        <ul id="my-ul" class="ms-auto navbar-nav">

                            <li class="nav-item">
                                <a   class="nav-link" id="about" href="{{ url('app_about' )}}">About us</a>
                            </li>
                            <li class="nav-item">
                                <a  class="nav-link" id="how" href="">Blog</a>
                            </li>
                            <li class="nav-item d-none d-sm-block">
                                <a  class="nav-link button button-register" id="button-register" href="#">Register</a>
                            </li>


                        </ul>
                    </div>
                </nav>
            </div>
            <div class="row row-content">
                <div id="page-container" class="page-container">

                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/093c7f6b78.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="{{ asset('js/main/nav.js') }}"></script>
    <script src="{{ asset('js/admin/changePage.js') }}"></script>

{% endblock %}


