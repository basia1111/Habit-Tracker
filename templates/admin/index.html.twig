{% extends 'base.html.twig' %}
{% block stylesheets %}


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="{{ asset('css/main/nav.css') }}">
    <link rel="stylesheet" href="{{ asset('css/admin/admin-index.css') }}">
    <link rel="stylesheet" href="{{ asset('css/admin/users.css') }}">
    <link rel="stylesheet" href="{{ asset('css/admin/create.css') }}">
    <link rel="stylesheet" href="{{ asset('css/admin/posts.css') }}">
{% endblock %}

{% block body %}

    <div class="row main-row">
        <div class=" col-first  col-sm-2 col-2">
            <div class="side-menu-wrapper d-flex flex-column">
                <div class="logo">
                    AdminDashboard
                </div>
                <div class="menu">
                    <button id="users" class="menu-option-wrapper" onclick="changePage('users', 1)">
                       <i class="fa-solid fa-users"></i> <span class="d-md-block d-none">Users</span>
                    </button>
                    <button id="create" class="menu-option-wrapper" onclick="changePage('create')">
                        <i class="fa-solid fa-pen-to-square"></i><span class="d-md-block d-none">Create Post</span>
                    </button>
                    <button id="posts" class="menu-option-wrapper" onclick="changePage('posts')">
                        <i class="fa-solid fa-book-open"></i><span class="d-md-block d-none">Posts</span>
                    </button>
                </div>
                <div class="logout">
                    <a onclick="logout()" href="{{ url('app_logout') }}"><i class="bi bi-box-arrow-right"></i><span class="d-md-block d-none">Logout</span></a>
                </div>
            </div>

        </div>
        <div class=" col-second  col-sm-10  col-10">
            <div id="row-content" class="row row-content">
                <div id="page-container" class="page-container">

                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/093c7f6b78.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="{{ asset('js/main/nav.js') }}"></script>
    <script src="{{ asset('js/admin/changePage.js') }}"></script>
    <script src="{{ asset('js/admin/coverImage.js') }}"></script>

{% endblock %}


